@using OnlineCampus.ViewModels
@model StudentDetailViewModel

<h1>Delete Student</h1>

<form asp-controller="Student" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="StudentId" />
    <div class="form-group">
        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label asp-for="LastName">LastName</label>
        <input asp-for="LastName" class="form-control" readonly/>
    </div>

    <button type="submit">Delete</button>
</form>